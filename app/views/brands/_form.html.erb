<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_for @brand do |f| %>
        
        <%= render "shared/error", object: f.object  %>
      
      <div class="mb-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :manufacturer %>
        <%= f.text_field :manufacturer, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :manufacturer_email %>
        <%= f.email_field :manufacturer_email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :manufacturer_office %>
        <%= f.text_field :manufacturer_office, class: 'form-control' %>
      </div>
      
      <div class="mb-3">
        <%= f.submit "Submit" , class: "btn btn-primary" %>
      </div>

      <%= hidden_field_tag :previous_request, request.referer %>

    <% end %>
  </div>
</div>