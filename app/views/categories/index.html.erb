<% provide(:title, "All Catagories")%>

<main class="page-body">
<%= render "shared/flash"%>
    <h2>Category List</h2>
    <div id="categories">
    <% if !@categories.empty? %>
      <table class="table table-striped table-hover table-bordered text-center">
        <thead class="table-dark">
          <tr>
            <th>Category name</th>
            <th>Description</th>
            <% if current_user.admin? %>
              <th colspan="3"></th>
            <% else %>
              <th colspan="2"></th>
            <% end %>
          </tr>
        </thead>
        <tbody> 
          <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td><%= link_to "Show", category, class: "btn btn-primary" %></td>
                <% if current_user.admin? %>
                  <td><%= link_to "Edit", edit_category_path(category), class: "btn btn-info"%></td>
                  <td><%= link_to "Destroy", category, method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-danger" %></td> 
                <% end %>
              </tr> 
          <% end %>        
        </tbody>    
      </table> 
    <% else %>
      <p class="text-center">No category found!<br/>
       Click 'Add Category' button to add new Category.</p>
    <% end %>
    </div>
    <% if current_user.admin? %>
      <br/>
      <%= link_to "Add Category", new_category_path, class:"btn btn-secondary" %>
    <% end %>
</main>
  