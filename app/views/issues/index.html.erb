<% provide(:title, (Current.user.admin? ? "All Issues" : "Your Issues")) %>

<main class="page-body">
  <%= render "shared/flash" %>
  <div class ="d-flex justify-content-end">
     <% if !Current.user.admin? %>
      <%= link_to "Report an Issue", new_issue_path, class: "btn btn-warning" %>
     <% end %>
  </div>

  <div class="d-flex justify-content-between">
    <%= search_form_for @q do |f| %> 
      <div class="input-group">
        <div class="form-outline">
          <%= f.text_field :item_name_cont, class: 'form-control', placeholder: 'search by Item name' %> 
        </div>
        <div><%= f.submit class: 'btn btn-secondary' %></div>
      </div>
    <%end%>

    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <div class="form-outline">
          <%= f.select :solved_at_cont, [["--select--", ""],["Solved", !nil ], ["Not Solved", nil]]%>
        </div>
        <%= f.submit 'Apply', class: 'btn btn-sm btn-secondary' %>
      </div>
    <%end%>
  </div>

  

  <h2>All Issues</h2>
  <% if !@issues.blank? %>
    
    <table class="table table-striped table-hover table-bordered text-center">
      <thead class="table-dark"> 
        <tr>
          <th> Issue no. </th>
          <th> Item </th>
          <th><%= sort_link(@q, :created_at, 'Reported at', class: "text-white") %></th>
                 
          <% if Current.user.admin? %>
            <th>
              User
            </th>
          <% end %>

          <th> Solved at? </th>
          <th> </th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <td>
              <%= "ISN0#{issue.id}" %>
            </td>

            <td>
              <%= item_display_name get_item_by_id issue.item_id %>
            </td>

            <td>
              <%= issue.created_at.strftime("%d-%m-%Y %H:%M:%S") %>
            </td>

            

            <% if Current.user.admin? %>
              <td>
                <%= get_user_name_by_id issue.user_id %>
              </td>
            <% end %>

            <td>
              <% if issue.solved_at.nil? %>
                No
              <% else %>
                Solved at : <%= issue.solved_at.strftime("%d-%m-%Y %H:%M:%S") %>
              <% end %>
            </td>
            <td><%= link_to "Details", issue, class: "btn btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center">
      <%= Current.user.admin? ? "NO Issues have been reported till now." : "No issue is reported by you." %>
    </div>
  <% end %> 
</main>