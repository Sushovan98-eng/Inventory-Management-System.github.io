<% provide(:title, "Report Issue") %>

<div class="row d-flex justify-content-center">
  <div class="col-md-6">
    <main class="page-body">
      <h2>Report an Issue</h2>
          <%= render "shared/flash"%>
      <%= form_for @issue do |f| %>
      
        <%= render "shared/error", object: f.object %>

        <div class="form-group mb-3">
          <%= f.label :item_id %>
          <%= f.collection_select :item_id, Item.where(id: [Allotment.select(:item_id).where(user_id: current_user.id, dealloted_at: nil)]), :id, :name, {include_blank: '--select item--'}, {class: 'form-control'} %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :issue_description %>
          <%= f.text_area :issue_description, class: 'form-control' %>
        </div>

        <%= f.submit 'Report Issue', class: "btn btn-primary" %>
      <% end %>
    </main>
  </div>
</div>