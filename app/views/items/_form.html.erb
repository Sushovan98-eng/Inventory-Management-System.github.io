<div class="row d-flex justify-content-center">
  <div class="col-md-6">
      <%= form_for @item do |f| %>

        <%= render "shared/error", object: f.object  %>

        <div class="mb-3">
          <%= f.label :name, "Item Name" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :item_id, "Brand" %>

          <div>
              <%= f.collection_select :brand_id, Brand.all, :id, :name, {include_blank: '--select brand--'}, {class: 'form-control'} %>
          </div>
        </div>


        <div class="mb-3">
          <%= f.label :category_id, "Category" %>

          <div>
            <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: '---select category--'}, {class: 'form-control'} %>
          </div>
        </div>


        <div class="mb-3">
          <%= f.label :price, "Unit Price" %>
          <%= f.number_field :price, min: 0, step: 0.01, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :total_stock %>
          <%= f.number_field :total_stock, min: 0, max: 1000, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :minimum_required_stock %>
          <%= f.number_field :minimum_required_stock, min: 0, max: 1000, class: 'form-control' %>
        </div>
        
        <div>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>