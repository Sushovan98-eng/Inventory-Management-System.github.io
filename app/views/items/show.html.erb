
<% provide(:title, "Items")%>
<br/>
<%= render "shared/flash"%>
<div class="card">
  <div class="card-header">
    <%= render @item %>
  </div>
  <div class="card-body text-center">
      <% if current_user.admin? %>
        <%= link_to "Edit", edit_item_path(@item),class:"btn btn-secondary" %>   |
      <% end %>
      <%= link_to "Back", items_path, class:"btn btn-secondary" %>
      <% if current_user.admin? %>
        <br/><br/>
          <%= button_to "Destroy", @item, method: :delete, class:"btn btn-danger" %>
      <% end %>
  </div>
</div>