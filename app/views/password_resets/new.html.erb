<h2>Reset your password?</h2>

<%= form_with url: password_reset_path do |f| %>
    
     <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= f.submit "Reset Password", class: "btn btn-primary" %>
    </div>
<%end%>