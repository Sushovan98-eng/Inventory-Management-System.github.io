<% provide(:title, "Profile")%>
<main class="page-body">
  <br/>
  <%= render "shared/flash"%>
  <h3>Your Profile</h3>
  <div class="card">
    <div class="card-header">
    
    <div class="d-flex justify-content-end">
      <%= link_to "Edit", edit_profile_path, class:"btn btn-sm btn-info" %>
    </div>


    <p>
        <strong>Name: </strong>
        <%= current_user.name %>
    </p>
    <p>
        <strong>Email: </strong>
        <%= current_user.email %>
    </p>
    <p>
        <strong>Mobile No: </strong>
        <%= current_user.mobile_no %>
    </p>

    </div> 
  </div>
  <br/>
  <div class="text-center">
    To change your password,  <%= link_to "Click here!", edit_password_path, class: "btn btn-link" %>  
  </div>
</main>
